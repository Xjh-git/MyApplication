<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_ninjia_back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="返 回" />

            <EditText
                android:id="@+id/update_ninjia_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入忍者的名称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择忍者的头像:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择忍者的全身图:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon_big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择技能一的图标:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>

            <EditText
                android:id="@+id/update_ninjia_details1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入技能一的描述" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择技能二的图标:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>

            <EditText
                android:id="@+id/update_ninjia_details2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入技能二的描述" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择奥义技能的图标:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>


            <EditText
                android:id="@+id/update_ninjia_details3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入奥义技能的描述" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择奥义终结图:" />

                <ImageView
                    android:id="@+id/update_ninjia_icon_end"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/xiaorentou" />

            </LinearLayout>

            <Spinner
                android:id="@+id/update_ninjia_level"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/ninjia_levels"
                android:gravity="center"
                android:prompt="@string/ninjia_level">

            </Spinner>

            <EditText
                android:id="@+id/update_ninjia_tall"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入身高" />

            <EditText
                android:id="@+id/update_ninjia_weight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="输入体重" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/update_ninjia_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交" />

                <Button
                    android:id="@+id/update_ninjia_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>