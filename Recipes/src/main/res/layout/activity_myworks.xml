<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/tt7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mywork_touxiang"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/mywork_name"
            android:layout_marginStart="114dp"
            android:src="@drawable/xiaorentu" />

        <ImageView
            android:id="@+id/work_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconfont_back" />

        <TextView
            android:id="@+id/mywork_name"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="107dp"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ListView
            android:id="@+id/mywork_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>


</LinearLayout>
