<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tt">


    <com.example.recipes.CircleImageView
        android:id="@+id/userpotrait_civ"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/xiaorentu" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/userpotrait_civ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/publish_img1"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_above="@+id/publish_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tt8" />

    <ImageView
        android:id="@+id/publish_img2"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/publish_img1"
        android:layout_marginEnd="29dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zuoping" />

    <TextView
        android:id="@+id/publish_tv"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/publish_tv2"
        android:layout_marginStart="26dp"
        android:gravity="center"
        android:text="发布菜谱"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publish_tv2"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/publish_img2"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="发布作品"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
